  "totalUsers": 1200,
  "todayRecharges": 85,
  "todayRevenue": 4599.99,
  "activeUsers": 712,
  "topComplaints": {
    "Network Down": 23,
    "Slow Internet": 18,
    "Call Drops": 14
  }
}
